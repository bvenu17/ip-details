<nav class="#263238 blue-grey darken-4">
    <div class="nav-wrapper container">
        <a href="/" class="brand-logo">IP Details</a>
    </div>
</nav>

<div class="container">
    <div class="row">
        <div class="col s6">
            <p>
                <b>IP Address:</b> {{locationDetails.query}} <br></br>
                <b>Country:</b> {{locationDetails.country}}<br></br>
                <b>Region Name:</b> {{locationDetails.regionName}}<br></br>
                <b>City:</b> {{locationDetails.city}}<br></br>
                <b>Latitude:</b> {{locationDetails.lat}}<br></br>
                <b>Longitude:</b> {{locationDetails.lon}}<br></br>
            </p>
        </div>
        <div class="mapView col s6">
            <iframe width="600" height="450" frameborder="0" style="border:0;padding:20px;height:300px;width:300px"
                src="https://www.google.com/maps/embed/v1/place?q={{locationDetails.lat}},{{{locationDetails.lon}}}&key=AIzaSyAgCmZMYCBmuNLO_gJOxCWzobV3DLvtevY"
                allowfullscreen></iframe>
        </div>
    </div>
    <div class="divider"></div>
    <div class="center " style="height: 100px;">
        <a class="center" href="/"><b>Search again</b></a>
    </div>
</div>